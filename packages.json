  "pre-install": {
    "homebrew": {
      "description": "Homebrew package manager",
      "macos": {
        "check": "command -v brew",
        "install": "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
        "post_install": "brew update"
      }
    },
    "oh-my-zsh": {
      "description": "Oh My Zsh framework (includes zsh configuration)",
      "macos": {
        "check": "[ -d \"$HOME/.oh-my-zsh\" ]",
        "install": "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\" \"\" --unattended"
      },
      "config": {
        "source": "shell/zsh",
        "destination": "$XDG_CONFIG_HOME/zsh"
      }
    },
    "typewritten": {
      "description": "Typewritten Zsh theme",
      "macos": {
        "check": "[ -d \"${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/typewritten\" ]",
        "install": "git clone https://github.com/reobin/typewritten ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/typewritten"
      }
    },
    "vi-mode": {
      "description": "Zsh vi-mode plugin",
      "macos": {
        "check": "[ -d \"${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-vi-mode\" ]",
        "install": "git clone https://github.com/jeffreytse/zsh-vi-mode ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-vi-mode"
      }
    }
  },
