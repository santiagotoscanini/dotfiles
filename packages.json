  "pre-install": {
    "rosetta": {
      "description": "Rosetta for Apple Silicon, required to run Intel apps on Apple silicon",
      "macos": {
        "check": "pgrep oahd",
        "install": "softwareupdate --install-rosetta --agree-to-license"
      }
    },
    "root_zshenv": {
      "description": "Set root .zshenv",
      "macos": {
        "check": "test -f /etc/zshenv",
        "install": "printf 'export ZDOTDIR=$HOME/.config/zsh\n. $ZDOTDIR/.zshenv\n' >> ~/.zshenv"
      }
    },
    "ssh__github": {
      "description": "Add SSH key to GitHub",
      "macos": {
        "check": "test -f ~/.ssh/id_github",
        "install": "ssh-keygen -t ed25519 -C \"github@account.toscanini.me\" -f ~/.ssh/id_github -N \"\""
      }
    },
    "ssh__s2_neo": {
      "description": "Add SSH key to S2",
      "macos": {
        "check": "test -f ~/.ssh/id_s2_neo",
        "install": "ssh-keygen -t ed25519-sk -f ~/.ssh/id_s2_neo"
      }
    },
    "ssh__s2_nano": {
      "description": "Add SSH key to S2",
      "macos": {
        "check": "test -f ~/.ssh/id_s2_nano",
        "install": "ssh-keygen -t ed25519-sk -f ~/.ssh/id_s2_nano"
      }
    },
    "vim-plug": {
      "description": "Vim plugin manager, after this is installed it will run `nvim +PlugInstall` to install plugins",
      "macos": {
        "check": "test -f ~/.local/share/nvim/site/autoload/plug.vim",
        "install": "curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim && nvim +PlugInstall"
      }
    },
    "dev-directories": {
      "description": "Create development directory structure",
      "macos": {
        "paths": [
          "~/.config",
          "~/dev/personal",
          "~/dev/work",
          "~/Documents/Screenshots"
        ],
        "permissions": "755"
      },
      "provider": "directory"
    },
    "dock-autohide": {
      "description": "Enable dock auto-hide",
      "macos": {
        "domain": "com.apple.dock",
        "key": "autohide",
        "type": "bool",
        "value": true
      },
      "provider": "defaults"
    },
    "dock-orientation": {
      "description": "Dock position",
      "macos": {
        "domain": "com.apple.dock",
        "key": "orientation",
        "type": "string",
        "value": "right"
      },
      "provider": "defaults"
    },
    "dock-size": {
      "description": "Set dock icon size",
      "macos": {
        "domain": "com.apple.dock",
        "key": "tilesize",
        "type": "int",
        "value": 65
      },
      "provider": "defaults"
    },
    "dock-show-recents": {
      "description": "Show recent apps in dock",
      "macos": {
        "domain": "com.apple.dock",
        "key": "show-recents",
        "type": "bool",
        "value": false
      },
      "provider": "defaults"
    },
    "homebrew": {
      "description": "Homebrew package manager",
      "macos": {
        "check": "command -v brew",
        "install": "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
        "post_install": "brew update"
      }
    },
    "oh-my-zsh": {
      "config": {
        "destination": "$XDG_CONFIG_HOME/zsh",
        "source": "shell/zsh"
      },
      "description": "Oh My Zsh framework (includes zsh configuration)",
      "macos": {
        "check": "[ -d \"$HOME/.oh-my-zsh\" ]",
        "install": "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\" \"\" --unattended"
      }
    },
    "screencapture-location": {
      "description": "Screenshot location",
      "macos": {
        "domain": "com.apple.screencapture",
        "key": "location",
        "type": "string",
        "value": "~/Documents/Screenshots"
      },
      "provider": "defaults"
    },
    "typewritten": {
      "description": "Typewritten Zsh theme",
      "macos": {
        "check": "[ -d \"${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/typewritten\" ]",
        "install": "git clone https://github.com/reobin/typewritten ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/typewritten"
      }
    },
    "vi-mode": {
      "description": "Zsh vi-mode plugin",
      "macos": {
        "check": "[ -d \"${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-vi-mode\" ]",
        "install": "git clone https://github.com/jeffreytse/zsh-vi-mode ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-vi-mode"
      }
    }
  },
