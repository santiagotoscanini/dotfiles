Host github.com
  HostName github.com
  User git
  IdentitiesOnly yes
  # We need a default identity to use it with outside commands, like brew update
  # I override this with the -i flag when I need to use a different identity (check .gitconfig)
  IdentityFile ~/.ssh/id_github

Host s2
  HostName 192.168.0.2
  User santiago
  IdentityFile ~/.ssh/id_s2_nano
  IdentityFile ~/.ssh/id_s2_neo
  IdentitiesOnly yes

